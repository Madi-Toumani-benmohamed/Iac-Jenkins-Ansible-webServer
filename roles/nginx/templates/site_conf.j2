server {
    listen  80;
    
    server_name {{ item }} www.{{ item }};
    
    location / {
        root  /var/www/{{ item }}/html;
        index  index.html index.htm index.php;
        try_files $uri $uri/ =404;
    }

    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}
